{
  "manifest_version": 2,

  "name": "Share to Confluence",
  "description": "Share a link to Confluence",
  "version": "1.0",
  "author": "Edmund Dipple <edmund.dipple@devopsguys.com>",

  "icons": {
    "48": "icon.png"
  },

  "permissions": [
    "tabs", "<all_urls>"
  ],

  "browser_action": {
    "default_icon": "icon.png"
  },

  "background": {
    "scripts": ["background.js"]
  }
}
